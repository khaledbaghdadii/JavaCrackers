<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="8dp"
        android:isScrollContainer="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:paddingBottom="300px">

            <TextView
                android:id="@+id/titleIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#131313"
                android:text="Hello Java!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/orange_custom"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="296dp"
                android:layout_height="124dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/webdev" />

            <TextView
                android:id="@+id/qstn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4px"
                android:text="Tell us, what language do you speak?"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBoxEng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="English" />

            <CheckBox
                android:id="@+id/checkBoxArabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Arabic" />

            <CheckBox
                android:id="@+id/checkBoxFrench"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="French" />

            <TextView
                android:id="@+id/languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4px"
                android:text="Just as you speak english, we speak java! "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4px"
                android:text="Now let's learn some Java!"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4px"
                android:layout_marginTop="20px"
                android:text="To run a java program, you have to have the following:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Class: A blueprint(plan) of objects "
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Main Method: public static void main(String [] args)"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4px"
                android:paddingTop="20px"
                android:text="Now, let's say I want to print something to the screen. How do I do this?"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click on Run to see the output of the print statement!!"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/helloworld" />

            <Button
                android:id="@+id/runBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run" />

            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/welldone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Now, let's try printing your name!"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text='System.out.println("'
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nameTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text='");'
                    android:textSize="16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/testBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test" />

            <TextView
                android:id="@+id/outputTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='Output: '
                android:textSize="16sp" />

            <TextView
                android:id="@+id/outputTest2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>